<Application
    x:Class="Bobo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:generics="clr-namespace:System.Collections.Generic;assembly=netstandard"
    xmlns:bobo="clr-namespace:Bobo"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    StartupUri="/UI/Windows/Trainer/TrainerWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <bobo:TrainerViewModel x:Key="ViewModel" />
            <bobo:NameToFontConverter x:Key="NameToFontConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <sys:Double x:Key="FontViewerWidth">720</sys:Double>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/Styles/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
